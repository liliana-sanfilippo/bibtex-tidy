{
	"name": "bibtex-tidy",
	"version": "1.14.0",
	"description": "Tidy bibtex files",
	"homepage": "https://github.com/FlamingTempura/bibtex-tidy",
	"repository": {
		"type": "git",
		"url": "https://github.com/FlamingTempura/bibtex-tidy.git"
	},
	"author": "FlamingTempura",
	"license": "MIT",
	"main": "./bibtex-tidy.js",
	"module": "./bibtex-tidy.js",
	"types": "./bibtex-tidy.d.ts",
	"man": "./bibtex-tidy.0",
	"bin": {
		"bibtex-tidy": "./bin/bibtex-tidy"
	},
	"files": [
		"bin/bibtex-tidy",
		"bibtex-tidy.js",
		"bibtex-tidy.d.ts",
		"bibtex-tidy.0"
	],
	"scripts": {
		"build": "node build.ts",
		"serve": "node build.ts --serve",
		"test": "npm run test:unit && npm run test:cli && npm run test:api && npm run test:spec && npm run test:corpus",
		"test:unit": "node --disable-warning=ExperimentalWarning --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info  \"src/**/*.spec.ts*\"",
		"test:cli": "node --disable-warning=ExperimentalWarning --test ./test/cli/*.test.ts",
		"test:api": "node --disable-warning=ExperimentalWarning --test ./test/api/*.test.ts",
		"test:spec": "node --disable-warning=ExperimentalWarning --import ./test/spec/support/test-register.mts --test-concurrency 1 --test ./test/spec/*.spec.yaml",
		"test:corpus": "node --disable-warning=ExperimentalWarning --import ./test/corpus/support/test-register.mts --test ./test/corpus/**/*.bib",
		"typecheck": "tsc --noEmit",
		"cover": "c8 --reporter=lcov --reporter=text npm run test:unit",
		"preversion": "git pull --rebase",
		"version": "./scripts/prepare-release.sh",
		"postversion": "git push --follow-tags && npm publish",
		"codemirror-grammar": "lezer-generator src/ui/codemirrorExtensions/bibtex.grammar -o src/ui/codemirrorExtensions/__generated__/bibtex.ts",
		"check": "npx @biomejs/biome check"
	},
	"engines": {
		"node": ">12"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": ">=24"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@codemirror/commands": "^6.6.1",
		"@codemirror/language": "^6.11.1",
		"@codemirror/lint": "^6.8.1",
		"@codemirror/view": "^6.37.1",
		"@lezer/generator": "^1.7.3",
		"@lezer/highlight": "^1.2.1",
		"@tsconfig/svelte": "^5.0.4",
		"@types/node": "^24.0.0",
		"c8": "^10.1.2",
		"core-js": "^3.43.0",
		"dts-bundle-generator": "^9.5.1",
		"esbuild": "^0.25.5",
		"esbuild-svelte": "^0.9.3",
		"puppeteer": "^24.10.0",
		"svelte-preprocess": "^6.0.3",
		"typescript": "^5.8.3",
		"yaml": "^2.8.0"
	}
}
